                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />

                </Grid.RowDefinitions>
                <Image Grid.Row="0" Margin="300,100" Source="Assets/nieTris logo.png"/>
                <TextBlock Grid.Row="1"  HorizontalAlignment="Center" FontWeight="Bold">by {insert studio name here}</TextBlock>
                <TextBlock Grid.Row="2"  HorizontalAlignment="Center"></TextBlock>
                <TextBlock Grid.Row="3"  HorizontalAlignment="Center"></TextBlock>
                <TextBlock Grid.Row="4"  HorizontalAlignment="Center" FontWeight="Bold" FontSize="22">WSZYSTKO</TextBlock>
                <TextBlock Grid.Row="5"  HorizontalAlignment="Center" FontSize="16">by</TextBlock>
                <TextBlock Grid.Row="6"  HorizontalAlignment="Center" FontSize="16">shio</TextBlock>
                <TextBlock Grid.Row="7"  HorizontalAlignment="Center"></TextBlock>
                <TextBlock Grid.Row="8"  HorizontalAlignment="Center"></TextBlock>
                <TextBlock Grid.Row="9"  HorizontalAlignment="Center" FontWeight="Bold" FontSize="22">TROCHĘ</TextBlock>
                <TextBlock Grid.Row="11"  HorizontalAlignment="Center" FontSize="16">by</TextBlock>
                <TextBlock Grid.Row="12"  HorizontalAlignment="Center" FontSize="16">Gumi</TextBlock>
                <TextBlock Grid.Row="13"  HorizontalAlignment="Center"></TextBlock>
                <TextBlock Grid.Row="14"  HorizontalAlignment="Center"></TextBlock>
