                <TextBlock Grid.Row="18"  HorizontalAlignment="Center"></TextBlock>
                <TextBlock Grid.Row="19"  HorizontalAlignment="Center"></TextBlock>
                <TextBlock Grid.Row="20"  HorizontalAlignment="Center"></TextBlock>
                <TextBlock Grid.Row="21"  HorizontalAlignment="Center" FontWeight="Bold" FontSize="22">PARTNER STRATEGICZNY</TextBlock>
                <Image Grid.Row="22" Margin="500,0" Source="Assets/motomoto.png"/>
